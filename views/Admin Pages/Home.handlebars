<div class="container-fluid" style="background-color: grey; margin: 0px; padding: 0px; width: 100%;">
  <div class="row" style="width: 100%; margin: 0px;">
    {{#each data}}
    <div class="col-sm-4" style="height: 280px;">
      <div class="container" style="width:70%; height: 70%;padding:0px; margin-right: 0px; margin-left: 60px; margin-right: 40px; margin-top: 10px">
          <div id="myCarousel{{id}}" class="carousel slide" data-ride="carousel" style="margin: 0px; width: 100%;">
            <!-- Wrapper for slides -->
            <div class="container"  style="height: 100%; width: 100%; padding: 0px;">
              <div class="carousel-inner" style="height: 100%; width: 100%; border-radius: 20px;">
                <div class="item active">
                  <img src="/{{image1}}" style="height: 200px; width: 100%;border-radius: 10px;">
                </div>
                <div class="item">
                  <img src="/{{image2}}" style="height: 200px; width: 100%;border-radius: 10px;">
                </div>
                <div class="item">
                  <img src="/{{image3}}" style="height: 200px; width: 100%;border-radius: 10px;">
                </div>
              </div>
            </div>  
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel{{id}}" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel{{id}}" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
      <div>
