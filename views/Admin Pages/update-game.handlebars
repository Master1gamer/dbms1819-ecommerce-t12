<div class="container-fluid" style="background-color: grey; border-radius: 10px;margin-top: 50px; margin-left: 200px; margin-right: 200px;">
  <div class="page-header" style="text-align: center; border-color: inherit;">
    <h1>Update Game Info</h1>
  </div>
  {{#each data}}
  <form method="POST" action="{{game_name}}/send" id="carform">
    <div class="col-sm-6">
      <div class="form-group">
        <div class="col-sm-12">
          <label for="game_name">Game Name:</label>
          <input type="text" class="form-control" id="game_name" value="{{game_name}}" name="game_name" required="">
          <br>
        </div>
        <div class="col-sm-12">
          <label for="price">Price:</label>
          <input type="decimal" class="form-control" id="price" value="{{price}}" name="price" required="">
          <br>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <div class="col-sm-12">
          <label for="phone">Genre:</label>
          <br>
          <select name="genre" form="carform" style="width: 100%; height: 33px;">
            {{#each gen}}
            <option>{{gen_name}}</option>
            {{/each}}
          </select>
          <br>
          <br>
        </div>
        <div class="col-sm-12">
          <label for="quantity">Publisher:</label>
          <br>
          <select name="publisher" form="carform" required style="width: 100%; height: 33px;" id="pub_name">
            {{#each pub}}
            <option>{{pub_name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <div class="form-group container" style="width: 100%;">
      {{#each data}}
      <div class="col-sm-12">
        <label for="description">Description:</label>
        <textarea type="text" class="form-control" id="description" name="description" rows="6" maxlength="840" >{{description}}</textarea>
      </div>
      {{/each}}
    </div>
    <div class="container" style="text-align: center; width: 100%;">
        <button type="submit" class="btn btn-default">Submit</button>
        <br>
    </div>
    <br>
  </form>
</div>
