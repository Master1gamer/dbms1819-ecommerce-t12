<style>
  body{
      background-color: grey;
    }
    .navbar navbar-default{
      color: #1E2033;
    }
    .bottom{
      position:relative;
      float:right;
      bottom:7px;
      right:9px;
    }
    #Details:hover {
      background-color:  #14143d;
      transition-duration: 1s;
    }
    .col-sm-4{
      text-align: center;
    }
</style>
<nav class="navbar navbar-default" style="background-color: #1E2033; border-color:#1E2033; margin:0px;">
  <div class="container-fluid" >
    <div class="navbar-header" style="width: 6%;">
      <a class="navbar-brand" href="/Home"><img src="/navi.jpg" style="width: 40px; position: relative; bottom: 10px;"></a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/Home">Home</a></li>
      <li><a href="/genre">Genre</a></li>
      <li><a href="/publisher">Publisher</a></li>
      <li class="active"><a href="/customers">Customer List</a></li>
      <li><a href="/orders">Order List</a></li>
      <li><a href="/admin/home">Admin</a></li>
    </ul>
    <form class="navbar-form navbar-left" action="Post">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
</nav>
<div class="container" style="width: 100%; height:50px; padding: 5px;background-color:#040959; ">
  <img src="/Title.png" style="height: 100%; position: relative; left: 50px;">
</div>
<div style="margin-top:10px;">
  <h2 class="page-header" style="border-color: transparent;">Customer Details:</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Gamer_id</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Phone (+63)</th>
      </tr>
    </thead>
    <tbody>
      {{#each data1}}
      <tr>
        <td>{{gamer_id}}</td>
        <td>{{gamer_fname}}</td>
        <td>{{gamer_lname}}</td>
        <td>{{email}}</td>
        <td>{{phone}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div style="margin-top:10px;">
  <h2 class="page-header" style="border-color: transparent;">Orders Made</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Game</th>
        <th>Quantity</th>
        <th>Date of Purchase</th>
        <th>Price(/each)</th>
        <th>Order ID</th>
      </tr>
    </thead>
    <tbody>
      {{#each data2}}
      <tr>
        <td>{{game_name}}</td>
        <td>{{quantity}}</td>
        <td>{{date_purchase}}</td>
        <td>{{price}}</td>
        <td>{{order_id}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>