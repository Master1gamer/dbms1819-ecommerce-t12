<div class="container-fluid" style="background-color: grey; border-radius: 10px;margin-top: 50px; margin-left: 200px; margin-right: 200px;">
  <div class="page-header" style="text-align: center; border-color: inherit;">
    <h1>Update Game Info</h1>
  </div>
  <form action="/action_page.php">
    <div class="col-sm-6">
      <div class="form-group">
        <div class="col-sm-12">
          <label for="game_name">Game Name:</label>
          <input type="text" class="form-control" id="game_name" value="{{game_name}}" name="game_name" required="">
          <br>
        </div>
        <div class="col-sm-12">
          <label for="price">Price:</label>
          <input type="number" class="form-control" id="price" value="{{price}}" name="price" required="">
          <br>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <div class="col-sm-12">
          <label for="phone">Genre:</label>
          <br>
          <select name="carlist" form="carform" style="width: 100%; height: 33px;">
            <option value="volvo">Volvo</option>
            <option value="saab">Saab</option>
            <option value="opel">Opel</option>
            <option value="audi">Audi</option>
          </select>
          <br>
          <br>
        </div>
        <div class="col-sm-12">
          <label for="quantity">Publisher:</label>
          <br>
          <select name="carlist" form="carform" required style="width: 100%; height: 33px;" id="pub_name">
            {{#each pub}}
            <option value="{{pub_id}}">{{pub_name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <div class="form-group container" style="width: 100%;">
      <div class="col-sm-12">
        <label for="description">Description:</label>
        <textarea type="text" class="form-control" id="description" name="description" rows="6" maxlength="840" >{{description}}</textarea>
      </div>
    </div>
    <div class="container" style="text-align: center; width: 100%;">
        <button type="submit" class="btn btn-default">Submit</button>
        <br>
    </div>
    <br>
  </form>
</div>
{{/each}}
{{#each gen}}
<div class="container" style="background-color: #A6A6A6; width: 100%; margin-top: 30px; border-radius: 20px; opacity: 0.95;">
  {{gen_name}}
</div>
{{/each}}
{{#each pub}}
<div class="container" style="background-color: #A6A6A6; width: 100%; margin-top: 30px; border-radius: 20px; opacity: 0.95;">
  {{pub_name}}
</div>
{{/each}}

<script type="text/javascript">
  $( document ).ready(function() {
      document.getElementById("pub_name").value = document.getElementById("pub_id").value;
      document.getElementById("gen_name").value = document.getElementById("gen_id").value;
  });

</script>